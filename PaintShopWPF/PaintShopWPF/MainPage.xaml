<UserControl x:Class="PaintShopWPF.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintShopWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="750" Height="610">
    <Grid Width="750" Background="#FFDFFBF9" HorizontalAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FF004445" HorizontalAlignment="Left" Height="65" Margin="180,10,0,0" RadiusY="10" RadiusX="10" StrokeThickness="0" VerticalAlignment="Top" Width="390" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="descriptionBlock" HorizontalAlignment="Left" Margin="190,20,0,0" TextWrapping="Wrap" Text="Здесь будут отображаться актуальные новости и акционные товары" VerticalAlignment="Top" Height="45" Width="370" Foreground="#FFDFFBF9" FontSize="16" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
